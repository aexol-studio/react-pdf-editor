{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "incremental": true,
    "strict": true,
    "outDir": "./lib",
    "lib": ["es6", "es7", "esnext", "dom"],
    "baseUrl": "./",
    "rootDir": "../"
  },
  "exclude": ["../lib", "../build", "../node_modules"]
}
